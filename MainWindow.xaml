<Window  xmlns="http://schemas.microsoft.com/netfx/2007/xaml/presentation" x:Class="LoL_Generator.MainWindow"

        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoL Generator" Height="444.673" Width="269.672" >
    <Window.Background>
        <ImageBrush ImageSource="https://lol.gamebuddy.gg/assets/images/summoners-rift-background.jpg"/>
    </Window.Background>

    <Grid Height="397" Margin="0" Width="250">
        <StackPanel Grid.ColumnSpan="2">


            <StackPanel Height="30" Orientation="Horizontal" Margin="0,5,0,0">
                <Image x:Name="ReadyIcon" Height="15" Width="15" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="100,0,0,0" AutomationProperties.Name="StatusIcon"></Image>
                <TextBlock x:Name="ReadyText" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" AutomationProperties.Name="StatusText"/>
            </StackPanel>

            <TextBlock x:Name="ChampionText" HorizontalAlignment="Center" Margin="0,15,0,0"></TextBlock>

            <Image x:Name="ChampionIcon" Width="100" Height="100" Margin="0,10,0,0" HorizontalAlignment="Center"/>

            <StackPanel Height="30" Margin="0,30,0,0" Width="230" Orientation="Horizontal" VerticalAlignment="Top">
                <Image x:Name="Summoner1Image" Height="30" Width="30" Margin="8,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Image x:Name="Summoner2Image" Height="30" Width="30" Margin="8,0" RenderTransformOrigin="1.573,-0.183"  HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBox Height="30" Width="30" Margin="8,0" Background="Transparent" Text="or" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0"/>
                <Image x:Name="Summoner3Image" Height="30" Width="30" Margin="8,0" RenderTransformOrigin="1.573,-0.183" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Image x:Name="Summoner4Image" Height="30" Width="30" Margin="8,0" RenderTransformOrigin="1.573,-0.183"  HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </StackPanel >

            <TextBlock Margin="0,30,0,0" HorizontalAlignment="Center">Click on a role to generate a loudout</TextBlock>

            <StackPanel Height="30" Width="230" Margin="0,30,0,0" Orientation="Horizontal" VerticalAlignment="Top">
                <Button x:Name="TopButton" Height="30" Width="30" Margin="8,0" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Padding="-4" IsHitTestVisible="False">
                    <Image x:Name="TopImage" Source="https://ultimate-bravery.net/images/roles/top_icon.png" Opacity="0.25" IsEnabled="False"/>
                </Button>
                <Button x:Name="JungleButton" Height="30" Width="30" Margin="8,0" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Padding="-4" IsHitTestVisible="False">
                    <Image x:Name="JungleImage" Source="https://ultimate-bravery.net/images/roles/jungle_icon.png" Opacity="0.25"/>
                </Button>
                <Button x:Name="MidButton" Height="30" Width="30" Margin="8,0" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Padding="-4" IsHitTestVisible="False">
                    <Image x:Name="MidImage" Source="https://ultimate-bravery.net/images/roles/mid_icon.png" Opacity="0.25"/>
                </Button>
                <Button x:Name="BotButton" Height="30" Width="30" Margin="8,0" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Padding="-4" IsHitTestVisible="False">
                    <Image x:Name="BotImage" Source="https://ultimate-bravery.net/images/roles/bot_icon.png" Opacity="0.25"/>
                </Button>
                <Button x:Name="SupportButton" Height="30" Width="30" Margin="8,0" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Padding="-4" IsHitTestVisible="False">
                    <Image x:Name="SupportImage" Source="https://ultimate-bravery.net/images/roles/support_icon.png" Opacity="0.25"/>
                </Button>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
